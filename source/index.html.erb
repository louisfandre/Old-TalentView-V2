				<% link_to 'http://www.comclever.com/', target: '_blank' do %>
					<%= image_tag 'comclever.png', class:"round"%>
				<% end %>
			</div>
			<div class="col-md-12">
				<% link_to 'http://www.viewon.fr/', target: '_blank' do %>
