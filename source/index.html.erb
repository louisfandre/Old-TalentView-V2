<!-- Wrapper -->

<div class="wrapper  row padded">
	<div class="text-center">
		<%= image_tag 'logo.png', class:'small_padding'%>
		<h1>Optimisez vos recrutements en quelques clics</h1>
		<h3>Créez un tunnel de qualification des candidats et révélez les meilleurs talents.</h3>
	</div>
	<div class="text-center medium_padding">
		<% link_to '#product' do %>
			<i class="fa fa-angle-down floating"></i>
		<% end %>
		
	</div>
</div>


<!-- Produit -->

<div id="product">
	<div class="text-center small_padding">
		<h2>Créez un tunnel de conversion</h2>
		<h4>et transformez les candidats en collaborateurs</h4>
	</div>

	<div class="row pop">
		<div class="col-md-6 text-center">
			<%= image_tag 'iphone.png', class:'' %>
		</div>
		<div class="col-md-6">
			<h3 class="text-center marger-top">Etape 1 : présentation simplifiée de l'annonce.</h3>
		</div>
	</div>

	<div class="text-center pop">
		<i class="fa fa-angle-down "></i>
	</div>

	<div class="row pop">
		<div class="col-md-6">
			<h3 class="text-center marger-top">Etape 2 : Vidéo interactive sur votre société pour évaluer le candidat</h3>
		</div>
		<div class="col-md-6 text-center">
			<%= image_tag 'hotspot.png', class:'' %>
		</div>
		
	</div>

	<div class="text-center pop">
		<i class="fa fa-angle-down "></i>
	</div>

	<div class="row pop">
		<div class="col-md-6 text-center">
			<%= image_tag 'pitch.png', class:'' %>
		</div>
		<div class="col-md-6">
			<h3 class="text-center marger-top">jhoihjoho</h3>
		</div>
		
		
	</div>
</div>

